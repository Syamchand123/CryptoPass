{
    "manifest_version": 3,
    "name": "CryptoPass Prototype",
    "version": "0.1.0",
    "description": "A stateless, deterministic password manager prototype.",
    "icons": {
        "48": "icons/icon48.png", 
        "128": "icons/icon128.png" 
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        },
        "default_title": "CryptoPass",
        "default_popup": "popup/popup.html" 
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "permissions": [
        "storage",      
        "activeTab",    
        "scripting"    
    ],
    "host_permissions": [
       
    ]
}