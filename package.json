{
  "name": "cryptopass",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:popup": "parcel watch popup/popup.html --dist-dir dist/popup --public-url ./",
    "build:popup": "parcel build popup/popup.html --dist-dir dist/popup --public-url ./",
  "clean": "rimraf dist", 
  "copy-static": "copyfiles -u 1 static/**/* dist", 
  "watch:popup": "parcel watch popup/popup.html --dist-dir dist/popup --public-url . --no-cache",
  "build": "npm run clean && npm run copy-static && npm run build:popup",
  "watch": "npm run clean && npm run copy-static && npm run watch:popup & npm run watch-static",
  "watch-static": "onchange \"static/**/*\" -- npm run copy-static" 
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "argon2": "^0.43.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "onchange": "^7.1.0",
    "parcel": "^2.15.1",
    "rimraf": "^6.0.1"
  }
}
